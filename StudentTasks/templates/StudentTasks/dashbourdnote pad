           def student_tasks_home(request):
    user_contract = Contract.objects.filter(student=request.user).first()
    contract_id = user_contract.id if user_contract else None  # Use None instead of 0 or ''
    context = {
        'contract_id': contract_id,
        'contract': user_contract,
    }
    return render(request, 'StudentTasks/home.html', context)