@login_required
def contract_dashboard(request, contract_id):
    contract = get_object_or_404(Contract, id=contract_id, student=request.user)
    years = Year.objects.filter(contract=contract).order_by('year')
    years = Year.objects.filter(contract=contract)
    years = Year.objects.all()
    for year in years:
     print(year.month_set.all())

    selected_month = None
    selected_week = None
    formset = None
    # Get current month (or first month if none selected)
    selected_month_id = request.GET.get('month')
    if selected_month_id:
        selected_month = get_object_or_404(Month, id=selected_month_id, year__contract=contract)
       

    # Get selected week
    
    week_id = request.GET.get('week')
    if selected_month and week_id:
        selected_week = get_object_or_404(Week, id=week_id, month=selected_month)
    
    # Handle task submission
    if request.method == 'POST' and selected_week:
        formset = DailyTaskFormSet(request.POST, queryset=DailyTask.objects.filter(week=selected_week))
        if formset.is_valid():
            formset.save()
            

            
            # Update progress calculations
            update_progress(selected_week)
            return redirect('contract_dashboard', contract_id=contract_id)
    elif selected_week:
        formset = DailyTaskFormSet(queryset=DailyTask.objects.filter(week=selected_week))
    
        

    context = {
        'contract': contract,
        'years':years,
        'selected_month': selected_month,
        'selected_week': selected_week,
        'formset': formset
    }
    return render(request, 'StudentTasks/dashbord_task.html', context)

def update_progress(week):
    # Update week progress
    tasks = DailyTask.objects.filter(week=week)
    total_hours = sum(task.hours for task in tasks)
    week.progress = min(100, (total_hours / 40) * 100)  # 40 = 8hrs * 5 days
    week.save()
    
    # Update month progress
    month_weeks = Week.objects.filter(month=week.month)
    total_weeks = month_weeks.count()
    if total_weeks:
        week.month.progress = sum(w.progress for w in month_weeks) / total_weeks
      
        week.month.save()
    
    # Update contract progress
    contract = week.month.contract
    contract_months = Month.objects.filter(year__contract=contract)
    total_months = contract_months.count()
    if total_months:
        contract.progress = sum(m.progress for m in contract_months) / total_months
      
        contract.save()


