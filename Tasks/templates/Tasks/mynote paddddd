            <span></span>
            <span></span>
            <span></span>
        </div>  
      </div>
 eventClick: function(info) {

                    const event = allEventsData.find(e => e.id === info.event.id);   // the event click must find the event details from our stored data.
                    // Open modal and display event details in the same page this ,ust show on the highlighted periods that has been set by supervisor
                    modalTitle.textContent = info.event.title;
                    modalStartDate.textContent = new Date(event.start).toLocaleDateString();
                    
                    const endDate = event.end ? new Date(event.end) : new Date(event.start);
                  
                    if (event.end && new Date (event.start).toDateString() !== endDate.toDateString()) {
                        endDate.setDate(endDate.getDate() - 1);
                    }
                    modalEndDate.textContent = endDate.toLocaleDateString();
                    modalDescription.textContent = event.description || 'No description provided.';
                    eventModal.style.display = 'flex'; 
                },
                eventDidMount: function(info) {
                 
                    info.el.title = info.event.extendedProps.description || ''; 
                }
            });


