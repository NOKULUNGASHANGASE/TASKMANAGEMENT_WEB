 @login_required
def weeklytask_detail(request, pk):
    #contract = get_object_or_404(Contract, id=contract_id, student=request.user)
    task = get_object_or_404(WeeklyTask, pk=pk)
    return render(request, 'StudentTasks/weeklytask_detail.html', {'task': task})

@login_required
def weeklytask_update(request, pk):
    ##contract = get_object_or_404(Contract, id=contract_id, student=request.user)
    task = get_object_or_404(WeeklyTask, pk=pk,  contract__student=request.user)
    if request.method == "POST":
        form = WeeklyTaskForm(request.POST, instance=task)
        if form.is_valid():
            form.save()
            messages.success(request, "Weekly task updated successfully.")
            return redirect('weeklytask_list',contract_id=task.contract.id)
    else:
        form = WeeklyTaskForm(instance=task)
    return render(request, 'StudentTasks/weeklytask_form.html', {'form': form})

@login_required
def weeklytask_delete(request, pk):
    #contract = get_object_or_404(Contract, id=contract_id, student=request.user)
    task = get_object_or_404(WeeklyTask, pk=pk, contract__student=request.user)
    if request.method == "POST":
        contract_id = task.contract.id
        task.delete()
        messages.success(request, "Weekly task deleted.")
        return redirect('weeklytask_list', contract_id=contract_id)
    return render(request, 'StudentTasks/weeklytask_delete.html', {'task': task})
